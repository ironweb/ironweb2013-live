<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <meta property="og:title" content="<%= t 'meta.title' %>"/>
  <meta property="og:site_name" content="Iron Web 2013"/>
  <meta property="og:description" content="<%= t 'meta.description' %>"/>
  <meta property="og:image" content="/img/share-logo-1.png"/>
  <meta property="og:image" content="/img/share-logo-2.png"/>
  <meta property="og:image" content="/img/share-logo-3.png"/>
  <%= css :app %>
  <%= js  :app %>
  <title><%= t 'meta.title' %></title>
  <meta name="description" content="<%= t 'meta.description' %>" />
  <script type="text/javascript">

  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-35981141-2']);
  _gaq.push(['_setDomainName', 'ironweb.org']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();

  </script>
</head>
<body>
  <div class="container">
    <nav class="meta">
      <a href="mailto:ironweb@webaquebec.org"><%= t 'nav.contact' %></a>
      <% if I18n.locale == :en %>
        <a class="language" href="/">Français</a>
      <% else %>
        <a class="language" href="/en">English</a>
      <% end %>
    </nav>
    <header>
      <div class="half-inline logo">
        <h1><%= img '/img/header.png', width: '389', height: '96', alt: 'Iron Web 2013' %></h1>
      </div>
      <div class="half-inline headlines">
        <div class="headlines-container">
          <ul class="blocks icons">
            <li class="ico-map"><%= t 'headlines.location' %></li>
            <li class="ico-calendar"><%= t 'headlines.dates' %></li>
            <li class="ico-time"><%= t 'headlines.time' %></li>
          </ul>
        </div>
      </div>
    </header>
    <section class="about">
      <div class="half-block">
        <h2><%= t 'sections.project.title' %></h2>
        <p><%= t 'sections.project.text' %></p>
      </div>
      <div class="half-block">
        <h2><%= t 'sections.about.title' %></h2>
        <p><%= t 'sections.about.text' %></p>
      </div>
    </section>
    <section class="folks">
      <h2><%= t 'sections.folks.title' %></h2>

      <h3 class="center"><%= t 'sections.folks.reds' %></h3>
      <ul class="plain folks">
        <li>Alexandre Lefrançois
          <span class="about"><%= t 'roles.integrator' %>, Image de Mark</span></li>
        <li>Alexia B. Proulx
          <span class="about"><%= t 'roles.integrator_e' %>, Cégep de Sainte-Foy</span></li>
        <li>Cesar Monchablon
          <span class="about"><%= t 'roles.designer' %>, Cégep de Sainte-Foy</span></li>
        <li>Damien Van Der Windt
          <span class="about"><%= t 'roles.integrator' %>, Nurun</span></li>
        <li>Emilie Bergeron
          <span class="about"><%= t 'roles.designer' %>, Vox CG</span></li>
      </ul>

      <h3 class="center"><%= t 'sections.folks.greens' %></h3>
      <ul class="plain folks">
        <li>Gregory Eric Sanderson
          <span class="about"><%= t 'roles.programmer' %>, Avencall</span></li>
        <li>Jimmy Bourassa
          <span class="about"><%= t 'roles.programmer' %>, Hookt Studios</span></li>
        <li>Mathieu Pesant
          <span class="about"><%= t 'roles.integrator' %>, Cégep de Sainte-Foy</span></li>
        <li>Fletcher Tomalty
          <span class="about"><%= t 'roles.programmer' %></span></li>
        <li>Sylvain Bouchard
          <span class="about"><%= t 'roles.programmer' %>, Savoir-faire Linux</span></li>
      </ul>
  
      <h3 class="center"><%= t 'sections.folks.jury' %></h3>
      <div class="judges">
        <div class="judge quarter-block">
          <%= img '/img/jury/dgupta.jpg', alt: 'Davender Gupta' %>
          <h4>Davender Gupta</h4>
          <p><a href="http://twitter.com/coachdavender">@coachdavender</a></p>
        </div>
        <div class="judge quarter-block">
          <%= img '/img/jury/jfournier.jpg', alt: 'Davender Gupta' %>
          <h4>Joanne Fournier</h4>
          <p><a href="http://twitter.com/jfournier">@jfournier</a></p>
        </div>
        <div class="judge quarter-block">
          <%= img '/img/jury/sgarneau.jpg', alt: 'Davender Gupta' %>
          <h4>Samuel Garneau</h4>
          <p><a href="http://twitter.com/garno">@garno</a></p>
        </div>
        <div class="judg quarter-block">
          <%= img '/img/jury/palalonde.jpg', alt: 'Pierre-Armand Lalonde' %>
          <h4>Pierre-Armand Lalonde</h4>
          <p><a href="http://twitter.com/palalonde">@palalonde</a></p>
        </div>
      </div>
    </section>
    <section class="partners">
      <h2><%= t 'sections.partners.title' %></h2>
      <div class="partners-logos">
        <div class="half-inline">
          <a href="http://www.ville.quebec.qc.ca/"><%= img '/img/partners/quebec.png', alt: 'Ville de Québec' %></a>
        </div>
        <div class="half-inline secondary">
          <a href="http://www.bordeaux.fr/"><%= img '/img/partners/bordeau.png', alt: 'Ville de Bordeau, France' %></a>
          <a href="http://webaquebec.org/"><%= img '/img/partners/waq.png', alt: 'Web à Québec' %></a>
          <a href="http://www.eq3.com/ca/<%= I18n.locale.to_s %>/">
            <%= img '/img/partners/eq3.png', alt: 'EQ3, du mobilier moderne pour la vie de tous les jours.' %></a>
          <a href="http://www.bchunique.com/"><%= img '/img/partners/bchunique.png', alt: 'BCH Unique' %></a>
        </div>
      </div>
    </section>
  </div>
</body>
</html>